    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <% if(pageId === 'home') { %>
    <title><%= site.title %></title>
    <% } else if(pageId === 'articles') { %>
    <title><%= articleTitle %> | <%= site.title %></title>
    <% } else { %>
    <title><%= pageTitle %> | <%= site.title %></title>
    <% } %>
    <% if(pageId === 'articles') { %>
    <meta name="description" content="<%= articleDescription %>" />
    <% } else { %>
    <meta name="description" content="<%= site.description %>" />
    <% } %>
    <meta name="format-detection" content="telephone=no">
    <!-- favicon -->
    <link rel="shortcut icon" href="<%= path %>/images/favicon.ico">
    <link rel="apple-touch-icon" href="<%= path %>/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="<%= path %>/images/android-chrome-192x192.png">
    <!-- og -->
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="<%= site.title %>" />
    <% if(pageId === 'home') { %>
    <meta property="og:title" content="<%= site.title %>" />
    <% } else if(pageId === 'articles') { %>
    <meta property="og:title" content="<%= articleTitle %> | <%= site.title %>" />
    <% } else { %>
    <meta property="og:title" content="<%= pageTitle %> | <%= site.title %>" />
    <% } %>
    <% if(pageId === 'articles') { %>
    <meta property="og:description" content="<%= articleDescription %>" />
    <% } else { %>
    <meta property="og:description" content="<%= site.description %>" />
    <% } %>
    <meta property="og:image" content="<%= site.url %>/images/ogp.png" />
    <% if(pageId === 'home') { %>
    <meta property="og:url" content="<%= site.url %>/" />
    <% } else if(pageId === 'articles') { %>
    <meta property="og:url" content="<%= site.url %>/<%= articleUrl %>" />
    <% } else { %>
    <meta property="og:url" content="<%= site.url %>/<%= pageId %>/" />
    <% } %>
    <!-- twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <% if(pageId === 'home') { %>
    <meta property="twitter:title" content="<%= site.title %>" />
    <% } else if(pageId === 'articles') { %>
    <meta property="twitter:title" content="<%= articleTitle %> | <%= site.title %>" />
    <% } else { %>
    <meta property="twitter:title" content="<%= pageTitle %> | <%= site.title %>" />
    <% } %>
    <% if(pageId === 'articles') { %>
    <meta property="twitter:description" content="<%= articleDescription %>" />
    <% } else { %>
    <meta property="twitter:description" content="<%= site.description %>" />
    <% } %>
    <meta property="twitter:image" content="<%= site.url %>/images/ogp.png" />
    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <!-- external files -->
    <link rel="stylesheet" href="<%= path %>/css/style.css" />
    <style>
        :root {
            --theme-color: yellow;
        }
        .box {
            background-color: var(--theme-color);
        }
    </style>
